{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title":"Possibility of the events to occur during an eruption",
  "width": 400, "height": 800,
  "background":"peachpuff",
  "data": {
    "url": "https://raw.githubusercontent.com/StuartB99/fit3179-ass-2/main/events.csv"
  },
  "transform": [
  {    
    "joinaggregate": [{
      "op": "count",
      "field": "event_type",
      "as": "num_of_events"
    }],
    "groupby": ["event_type"]
  },
  {
    "joinaggregate": [{
      "op": "distinct",
      "field": "eruption_number",
      "as": "num_of_eruptions"
    }]
  },
  {
    "calculate": "datum.num_of_events/datum.num_of_eruptions * 100",
    "as": "PercentOfTotal"
  }],
  "encoding": {
    "y": {"field": "event_type", "type": "nominal", "title": "Event", "sort": "-x"},
    "x": {"field": "PercentOfTotal", "type": "quantitative", "title": "Occurrence Possibility (%)"},
    "color": {"value": "#B22222"}    
  },
  "layer": [{"mark": {"type":"bar", "height": 10, "cornerRadiusEnd": 2}},
    { "mark": {
      "type": "text",
      "font":"Helvetica Neue",
      "fontSize": 15,
      "align": "left",
      "baseline": "middle",
      "dx": 1
    },
    "encoding": {
      "text": {"field": "PercentOfTotal", "type":"quantitative", "format": ".2f"}, "color":{"value":"black"}
    }
  }]
}
