{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 1800,
  "height": 1500,
  "title": "Volcanoes Around the World",
  "autosize":"fit", 
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/StuartB99/fit3179-ass-2/main/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "projection": {
        "type": "equalEarth"     
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/StuartB99/fit3179-ass-2/main/volcano.csv"
      },
      "projection": {
        "type": "equalEarth"
      },
      "mark":{"type": "point", "shape": "triangle-up"},
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {},
        "color": {"field": "elevation",
              "type": "quantitative",
              "scale": { "type": "threshold", "domain": [-2000,0, 2000, 4000], "range": ["#0571b0", "#92c5de", "#fd8d3c", "#cc4c02", "#7f2704"]},
              "title": "Elevation (m)"},
        "tooltip":[
        {"field":"volcano_name", "title":"Volcano name"},
        {"field":"last_eruption_year", "title":"Last Erupted Year"},
        {"field":"country", "title":"Country"},
        {"field":"subregion", "title":"Subregion"},
        {"field":"region", "title":"Region"},
        {"field":"primary_volcano_type", "title":"Volcano type"},
        {"field":"elevation", "title":"Elevation"},
        {"field":"tectonic_settings", "title":"Tectonic Settings"},
        {"field":"population_within_10_km", "title":"Population Within 10 km"}
    ]
      }
    }
  ]
}
